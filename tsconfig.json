{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "build/dist",
    "module": "system",
    "target": "es6",
    "lib": [ "dom","es2017"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "skeleton": ["src/components/index.tsx"]
    }
  },
  
  "exclude": [
    "node_modules",
    "lib"
  ]
}
